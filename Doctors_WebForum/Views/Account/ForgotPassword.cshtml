@model Doctors_WebForum.Models.ViewModels.ForgotPasswordDoctorViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-8 breadcrumbf">
            <a href="#">Quên mật khẩu</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-8">

            <!-- POST -->
            <div class="post">
                <form action="/Account/ForgotPassword" class="form newtopic" method="post">
                    <div class="postinfotop">
                        <h2>Đặt lại mật khẩu</h2>
                    </div>

                    <!-- acc section -->
                    <div class="accsection">
                        <div class="acccap">
                            <div class="userinfo pull-left">

                            </div>
                        </div>
                        <center>
                            <div class="topwrap">
                                <div class="posttext">
                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger">
                                            <strong>@ViewBag.Error!</strong>
                                        </div>
                                    }
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email của bạn" })
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </center>
                    </div>
                    <!-- acc section END -->
                    <div class="postinfobot">
                        <div class="pull-right postreply" style="margin-right: 65px">
                            <div class="pull-left smile"><a href="#"><i class="fa fa-smile-o"></i></a></div>
                            <div class="pull-left"><button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button></div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div><!-- POST -->
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
