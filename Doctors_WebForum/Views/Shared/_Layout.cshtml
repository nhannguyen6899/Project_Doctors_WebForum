<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forum :: Home Page</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom -->
    <link href="~/Content/css/custom.css" rel="stylesheet">

    <!-- fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/font-awesome-4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- CSS STYLE-->
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css" media="screen" />

    <!-- SLIDER REVOLUTION 4.x CSS SETTINGS -->
    <link rel="stylesheet" type="text/css" href="~/Content/rs-plugin/css/settings.css" media="screen" />

    <!-- check radio -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <style>
        a:hover {
            color: #2739c1;
            text-decoration: underline
        }
    </style>
</head>

<body class="topic">

    <div class="container-fluid">

        <!-- Slider -->
        <div class="tp-banner-container">
            <div class="tp-banner">
                <ul>
                    <!-- SLIDE  -->
                    <li data-transition="fade" data-slotamount="7" data-masterspeed="1500">
                        <!-- MAIN IMAGE -->
                        <img src="~/Content/images/slide-doctor.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="left top" data-bgrepeat="no-repeat">
                        <!-- LAYERS -->
                    </li>
                </ul>
            </div>
        </div>
        <!-- //Slider -->

        <div class="headernav">
            <div class="container">
                <div class="row">
                    <div class="col-lg-1 col-xs-3 col-sm-2 col-md-2 logo "><a href="/Home/Index"><img src="~/Content/images/logo.jpg" alt="" /></a></div>
                    <div class="col-lg-3 col-xs-9 col-sm-5 col-md-3 selecttopic">
                        <div class="dropdown">
                            <a data-toggle="dropdown">Doctor WebForum</a>
                        </div>
                    </div>
                    <div class="col-lg-4 search hidden-xs hidden-sm col-md-3">
                        <div class="wrap">
                            @* Search *@
                            <form action="/Search/Result" method="get" class="form">
                                <div class="pull-left txt"><input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm chủ đề"></div>
                                <div class="pull-right"><button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button></div>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-4 col-xs-12 col-sm-5 col-md-4 avt">
                        <div class="env pull-left"><i class="fa fa-envelope"></i></div>

                        <div class="avatar pull-left dropdown">
                            <a data-toggle="dropdown" href="#">

                                @if (Session["UserName"] != null)
                                {
                                    if (Session["Img"] == null)
                                    {
                                        <img src="~/Content/images/user.png" alt="" />
                                        <div class="status green">&nbsp;</div>
                                    }
                                    else
                                    {
                                        <img width="37" height="37" src='~/Content/images/@Session["Img"]' alt="" />
                                        <div class="status green">&nbsp;</div>
                                    }
                                }
                                else
                                {
                                    <img src="~/Content/images/user.png" alt="" />
                                }
                            </a> <b class="caret"></b>
                            <ul class="dropdown-menu" role="menu">

                                @if (Session["UserName"] != null)
                                {
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href='@Url.Action("User", "Profile", new {id = Session["Id"]})'>Tường nhà bạn</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-2" href="#">Hộp thư</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-2" href='@Url.Action("ChangePassword", "Account", new {id = Session["Id"]})'>Mật khẩu</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-2" href='@Url.Action("Privacy", "Profile", new {id = Session["Id"]})'>Riêng tư</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-3" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                                }
                                else
                                {
                                    <li role="presentation"><a role="menuitem" tabindex="-4" href="/Account/Login">Đăng nhập</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-4" href="/Account/Register">Đăng kí thánh viên</a></li>
                                }
                            </ul>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            @RenderBody()
        </section>

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-1 col-xs-3 col-sm-2 logo "><a href="/Home/Index"><img src="~/Content/images/logo.jpg" alt="" /></a></div>
                    <div class="col-lg-8 col-xs-9 col-sm-5 ">Copyrights 2019, DoctorWebForum.com</div>
                    <div class="col-lg-3 col-xs-12 col-sm-5 sociconcent">
                        <ul class="socialicons">
                            <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                            <li><a href="#"><i class="fa fa-cloud"></i></a></li>
                            <li><a href="#"><i class="fa fa-rss"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>


    <!-- SLIDER REVOLUTION 4.x SCRIPTS  -->
    <script type="text/javascript" src="~/Content/rs-plugin/js/jquery.themepunch.plugins.min.js"></script>
    <script type="text/javascript" src="~/Content/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>


    <!-- LOOK THE DOCUMENTATION FOR MORE INFORMATIONS -->
    <script type="text/javascript">

        var revapi;

        jQuery(document).ready(function () {
            "use strict";
            revapi = jQuery('.tp-banner').revolution(
                {
                    delay: 10000,
                    startwidth: 1200,
                    startheight: 370,
                    hideThumbs: 10,
                    fullWidth: "on"
                });

        });	//ready

    </script>

    <!-- END REVOLUTION SLIDER -->
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>


